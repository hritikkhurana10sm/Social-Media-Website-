<h1>Sign In Page</h1>

<form class = " d-flex align-items-center flex-column"action="/users/create-session" method="POST">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required placeholder="Email" name = "email">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input name = "password" type="password" class="form-control" id="exampleInputPassword1" required placeholder="Password">
    </div>
    
    <button type="submit" class="btn btn-primary">Sign In</button>
  </form>

