<section id="friends-list" style="position : fixed;margin-left: 960px;">
   
        <!-- display of friends -->
        <h4 style="font-weight: bolder;text-align: center;color: lightgrey;margin-left: 2rem;">VIEW FRIENDS</h4>

        <ul style="list-style-type: none;">

            <%for(f of p_user){%>
            <li style="margin-bottom: 2rem;">
                <a href="/users/profile/<%= f.id%>" style="color: white;text-decoration: none;"><%= f.name%></a>
                <div style="color: grey;"><%= f.email%></div>
            </li>
            <%}%>
        </ul>
</section>

</div>
