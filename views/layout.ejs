      <%- body %>
    

     <%- include('_footer');%>

     <%- script %>

     <script>
                // Usage of Flash 

                <% if(flash.success && flash.success.length > 0){ %>

                new Noty({
                  theme : 'nest',
                  text: '<%= flash.success %>',
                  type : 'success',
                  layout : 'topRight',
                  timeout : 1350
            
              }).show();

              <% } %>

              <% if(flash.error && flash.error.length > 0){ %>

         new Noty({
         theme : 'nest',
         text: '<%= flash.success %>',
         type : 'error',
         layout : 'topRight',
         timeout : 1350

        }).show();

<% } %>
     </script>
